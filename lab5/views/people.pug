extends layout

block content
        div(class="wrapper")
            div(class="header")
                h1(id="name") Участники аукциона
                p(
                    id="home"
                    onclick="redirectHome()"
                )="Домой"
            hr
            div(class="content")
                div(id="table_fon")
                    table(
                        class="table"
                        border="2"
                        id="table_people"
                    )
                        tr
                            th Участник
                            th Запас денежных средств
                            th(hidden) "id"
                        each val in people
                            -if (val != null)
                                tr
                                    th(id="namep")=val.name
                                    th
                                        input(
                                        id="money"+val.id
                                        type="text"
                                        name="money"
                                        value=val.money
                                        )
                                        input(
                                            type="text"
                                            name="id"
                                            value=val.id
                                            hidden
                                        )
                                    th(hidden)=val.id