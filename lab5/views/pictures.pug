extends layout

block content
        div(class="wrapper")
            div(class="header")
                h1(id="name") Картины аукциона
                p(
                    id="home"
                    onclick="redirectHome()"
                )="Домой"
            hr
            div(class="content")
                div(id="table_fon")
                    table(
                        class="table"
                        border="2"
                        id="idWalkTable"
                    )
                        tr
                            th Название картины
                            th Автор
                            th добавление в аукцион
                            th(hidden) "id"
                        each val in pictures
                            tr
                                th(onclick="redirect(" + val.id + ")")=val.name
                                th=val.author
                                th
                                    input(
                                        type="text"
                                        name="id"
                                        value=val.id
                                        hidden
                                    )
                                    input(
                                        id="botton"
                                        type="submit"
                                        value=val.auction
                                        onclick="save("+val.id+")"
                                    )
                                th(hidden)=val.id